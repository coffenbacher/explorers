            });
            $(document).ready(function(){
                $(".result").on("click", function(){
                    var pk = $(this).data('pk');
                    var currCenter = maps[pk].getCenter();
                    $(this).find(".details").show();
                    google.maps.event.trigger(maps[pk], "resize");
                    maps[pk].setCenter(currCenter);
                });
            });
            maps = {};
        </script>
